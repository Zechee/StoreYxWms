    <script type="text/javascript">
        // 页面加载完毕后，JavaScript 将开始运行
        document.addEventListener('DOMContentLoaded', function() {
            function updateClock() {
                var now = new Date();
                var formattedTime = now.getFullYear() + "年" + 
                                    (now.getMonth() + 1).toString().padStart(2, '0') + "月" + 
                                    now.getDate().toString().padStart(2, '0') + "日 " + 
                                    now.getHours().toString().padStart(2, '0') + "时" + 
                                    now.getMinutes().toString().padStart(2, '0') + "分" + 
                                    now.getSeconds().toString().padStart(2, '0') + "秒";
                document.getElementById('realtime-clock').textContent = formattedTime;
            }

            setInterval(updateClock, 1000); // 每秒更新时间
            updateClock(); // 初始调用以立即显示时间
        });
    </script>
