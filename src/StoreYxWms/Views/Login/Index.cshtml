    <script type="text/javascript">
        var app = new Vue({
            el: '#app',
            data: {
                UserNickname: '',
                Pwd: '',
                disabled: false,
                submit: "登录",
                reset: "取消",
                isSelected: false
            },
            methods: {
                checkLogin: function () {
                    var _self = this;
                    _self.disabled = true;
                    _self.isSelected = true;
                    //es5写法
                    if (_self.UserNickname.length <= 0) {
                        layer.msg('用户名不能为空', { icon: 5 });
                        _self.disabled = false;
                        _self.isSelected = false;
                        return false;
                    }
                    if (_self.Pwd.length <= 0) {
                        layer.msg('密码不能为空', { icon: 5 });
                        _self.disabled = false;
                        _self.isSelected = false;
                        return false;
                    }
                    var index = layer.load(1, {
                        shade: [0.1, '#fff'] //0.1透明度的白色背景
                    });

                    //n = {
                    //    "sys": {
                    //        UserNickname: _self.UserNickname,
                    //        Pwd: _self.Pwd
                    //    }
                    //};

                    yui.$axiospost('/Login/CheckLoginAsync', {
                        UserNickname: _self.UserNickname,
                        Pwd: _self.Pwd
                    })
                        .then(function (response) {
                            _self.disabled = false;
                            _self.isSelected = false;
                            if (response.data.Item1) {
                                _self.submit = "请等待...";
                                location.href = "/Home";
                            } else {
                                layer.close(index);
                                layer.msg(response.data.Item2 || errorMsg, { icon: 5 });
                            }
                        })
                        .catch(function (error) {
                            _self.disabled = false;
                            _self.isSelected = false;
                            layer.close(index);
                        });
                },
                cancel: function () {
                    var _self = this;
                    _self.Pwd = _self.UserNickname = "";
                }
            },
            mounted() {
                setTimeout(function () {
                    yui.getDomById("test").focus();
                }, 500);
            }
        });
    </script>
